---
import "../styles/global.css";
import Navbar from "../components/navbar.astro";
import Aside from "../components/aside.astro";
import "../styles/global.css";
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>layout</title>
	</head>
	<body class="bg-[#0c0c0e] overflow-hidden">
		<Navbar />
		<div class="flex p-5">
			<Aside />
			<main
				class="pb-[6.25rem] md:pb-0 md:ml-[30.5rem] bg-[#18181a] p-10 rounded-2xl overflow-auto h-screen w-full">
				<slot />
			</main>
		</div>
	</body>
</html>

<style is:global>

	@media (width >= 768px) {
		html {
			font-size: clamp(6px, 0.8vw, 15.6px);
		}
	}

	@media (width <= 767px) {
		html {
			font-size: clamp(6px, 2.2vw, 16px);
		}
	}
</style>
